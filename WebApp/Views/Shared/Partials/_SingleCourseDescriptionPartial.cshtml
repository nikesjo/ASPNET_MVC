                <span class="course-include"><i class="fa-solid fa-tv"></i><p>148 hours on-demand video</p></span>
                <span class="course-include"><i class="fa-regular fa-file"></i></i><p>18 articles</p></span>
                <span class="course-include"><i class="fa-solid fa-download"></i></i><p>25 downloadable resources</p></span>
                <span class="course-include"><i class="fa-regular fa-handshake"></i><p>Full lifetime access</p></span>
                <span class="course-include"><i class="fa-solid fa-trophy"></i></i><p>Certificate of completion</p></span>
                <div class="pricing">
                    @if (!string.IsNullOrEmpty(Model.DiscountPrice))
                    {
                        <div class="discount">@Model.DiscountPrice</div>
                    }

                    <div class="original @(!string.IsNullOrEmpty(Model.DiscountPrice) ? "discount-enabled" : "")">@Model.OriginalPrice</div>
                </div>
