@model CoursesViewModel
@{
    ViewData["Title"] = "Courses";
}


<section id="courses">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <i class="fa-solid fa-house"></i>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <i class="fa-solid fa-angles-right"></i>
                <li class="breadcrumb-item active" aria-current="page">Courses</li>
            </ol>
        </nav>

        <div class="header-courses">
            <h1>Courses</h1>
            <form class="filters">

                <div class="select">
                    <div class="selected">All categories</div>
                    <div class="select-options">
                        <div class="option" data-value="all">All categories</div>
                        @if (Model.Categories != null)
                        {
                            foreach (var category in Model.Categories)
                            {
                                <div class="option" data-value="@category.CategoryName">@category.CategoryName</div>
                            }
                        }
                    </div>
                </div>

                <div class="input-search-group">
                    <input id="searchQuery" name="searchQuery" placeholder="Search courses" />
                    <i class="fa-regular fa-search"></i>
                </div>

            </form>

@*             <li class="nav-item dropdown">
                <a class="dropdown-toggle form-control" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">All Categories</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Separated link</a></li>
                </ul>
            </li>
            <div class="categorylist">
                <form>
                    <input type="text" placeholder="All Categories">
                    <i class="fa-solid fa-chevron-down"></i>
                </form>
            </div>
            <div class="search-form">
                <form onkeyup="filterFunction()" role="search">
                    <input type="search" placeholder="Search Courses">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </form>
            </div> *@
        </div>
        @if (Model.Courses != null)
        {
            <div class="courses-square items">

                @foreach (var course in Model.Courses)
                {
                    <div class="grid-item course" onclick="location.href='@Url.Action("Details", "Courses", new { id = course.Id })'">
                        @if (course.IsBestSeller)
                        {
                            <div class="best-seller">Best Seller</div>
                        }

                        <a class="btn btn-circle bookmark" asp-action="Join" asp-controller="Courses"><i class="fa-regular fa-bookmark"></i></a>

                        <img src="~/images/courses/@course.ImageUrl" alt="@course.Title">

                        <div class="text-info content">
                            <h5>@course.Title</h5>
                            <p class="creator author">By @course.Author</p>
                            <div class="pricing">
                                @if (!string.IsNullOrEmpty(course.DiscountPrice))
                                {
                                    <div class="discount">@course.DiscountPrice</div>
                                }

                                <div class="original @(!string.IsNullOrEmpty(course.DiscountPrice) ? "discount-enabled" : "")">@course.OriginalPrice</div>
                            </div>
                        </div>
                        <div class="footer">
                            <div class="hours">
                                <i class="fa-regular fa-clock"></i>@course.Hours hours
                            </div>
                            <div class="likes">
                                <i class="fa-regular fa-thumbs-up"></i>@course.LikesInProcent (@course.LikesInNumbers)
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="pagination">
            <div class="pagination center-content">
                <a href="#"><i class="fa-regular fa-less-than"></i></a>
                <a href="#">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
                <a href="#"><i class="fa-regular fa-greater-than"></i></a>
            </div>
        </div>
        <div class="work-section">
            <div class="work-text">
                <h5>Ready to get Started?</h5>
                <h1>Take Your <span class="header-skills">Skills</span> to the <br>Next Level</h1>
                <button class="btn-theme-s">Work with us</button>
            </div>
            <div class="work-img">
                <img src="images/work-image.svg" alt="">
            </div>
        </div>
    </div>
</section>